<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="AllTests">
    <test name="automatic validation" enabled="true">
        <groups>
            <run>
                <exclude name="benchmarking" />
                <exclude name="noTest" />
                <exclude name="tooSlow" />
            </run>
        </groups>
        <packages>
            <package name="org.molgenis.vibe.*" />
        </packages>
    </test>

    <test name="benchmarking" enabled="false">
        <groups>
            <run>
                <include name="benchmarking" />
                <exclude name="tooSlow" />
            </run>
        </groups>
        <packages>
            <package name="org.molgenis.vibe.*" />
        </packages>
    </test>

    <test name="output examples (non-tests)" enabled="true">
        <groups>
            <run>
                <include name="noTest" />
                <exclude name="tooSlow" />
            </run>
        </groups>
        <packages>
            <package name="org.molgenis.vibe.*" />
        </packages>
    </test>
</suite>